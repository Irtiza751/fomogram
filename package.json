{
  "name": "fomogram",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "test": "turbo test",
    "ui:dev": "turbo run dev --filter=ui --filter=client",
    "client:dev": "turbo run dev --filter=client",
    "backend:dev": "turbo run dev --filter=backend",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker": "docker-compose up --build"
  },
  "devDependencies": {
    "@fomogram/eslint-config": "workspace:*",
    "@fomogram/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
